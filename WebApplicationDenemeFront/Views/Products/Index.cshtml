@model List<Product>

@{
    decimal sum = 0;
    foreach (var item in Model)
    {
        sum += item.Price;
    }
    
}
<table class="table table-info table-striped table-hover">
    <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Name</th>
        <th scope="col">Price</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Price</td>
        </tr>
    }
    </tbody>
</table>

<div class="alert alert-danger" role="alert">
    Ürünlerin Toplamı : @sum
</div>